<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Internship Announce Page</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
    <script
        src="https://cdnjs.cloudflare.com/ajax/libs/moment-timezone/0.5.34/moment-timezone-with-data.min.js"></script>
    <link rel="stylesheet" href="/popupModel.css">
</head>

<body>
    <header>
        <%- include('../partials/nav') %>
            <link rel="stylesheet" href="/companyShareOpportunity.css">
            <div id="sidebar" class="sidebar">
                <a href="/company" class="order"><button>HOME</button></a>
                <a href="/company/announcement" class="order"><button style="background-color: rgb(217, 4, 4);">Share
                        Opportunity</button></a>
                <a href="/company/applications" class="order"><button>Applications</button></a>
            </div>
    </header>


    <div class="container-company">
        <form method="POST" action="/company/announcement" enctype="multipart/form-data" class="uniform">
            <input type="hidden" name="companyId" value="<%= dataValues.id %>">
            <div class="details">
                <div class="image-upload-container">
                    <div class="dashed-rectangle">Upload image (Optional)</div>
                    <img id="uploadPreview" alt="Image Preview" class="file-upload-img" />
                    <label for="image" class="upload-button"><i class="fa-solid fa-image p-1"></i></label>
                    <input id="image" name="image" type="file" name="myPhoto" onchange="PreviewImage();" />
                    <button type="button" onclick="removeImage()" class="remove-button"><i
                            class="fa-solid fa-trash p-1"></i></button>
                </div>
                <div id="myModal" class="modal">
                    <div class="modal-content">
                        <span class="close">&times;</span>
                        <p id="modalMessage">Please select a file.</p>
                    </div>
                </div>
                <label for="announcementName" style="margin-top: 35px;">Title of the announcement:</label>
                <textarea id="announcementName" name="announcementName" class="form-control" rows="1"
                    required></textarea>

                <label for="description">Details about the internship opportunity:</label>
                <textarea id="description" name="description" class="form-control" rows="4" required></textarea>

                <div class="dates-div">
                    <label for="startDate">Start Date:</label>
                    <input type="date" id="startDate" name="startDate" class="form-control" required>

                    <label for="endDate">End Date:</label>
                    <input type="date" id="endDate" name="endDate" class="form-control" required>
                </div>

                <button type="submit" class="publish">Publish</button>
            </div>
        </form>
    </div>



    <script>
        const modal = document.getElementById('myModal');
        const closeButton = document.getElementsByClassName('close')[0];

        closeButton.onclick = function () {
            modal.style.display = 'none';
        }

        window.onclick = function (event) {
            if (event.target === modal) {
                modal.style.display = 'none';
            }
        }

        function PreviewImage() {
            var fileInput = document.getElementById("image");
            var file = fileInput.files[0];

            if (file) {
                if (file.type.match('image.*')) {
                    var oFReader = new FileReader();
                    oFReader.readAsDataURL(file);

                    oFReader.onload = function (oFREvent) {
                        document.getElementById("uploadPreview").src = oFREvent.target.result;
                        document.getElementById("uploadPreview").style.display = 'block';
                    };

                    oFReader.onerror = function (err) {
                        console.error('Error occurred reading file:', err);
                        alert('Error occurred reading file. Please try again.');
                    };
                } else {
                    alert('Please select an image file.');
                }
            } else {
                alert('No file selected. Please select a file.');
            }
        }

        function removeImage() {
            var fileInput = document.getElementById("image");
            var imagePreview = document.getElementById("uploadPreview");

            fileInput.value = "";
            imagePreview.src = "";
            imagePreview.style.display = 'none';
        }

        document.addEventListener('DOMContentLoaded', function () {
            const form = document.querySelector('form');
            const startDateInput = document.getElementById('startDate');
            const endDateInput = document.getElementById('endDate');

            // Use moment-timezone to get the current date in Turkey time zone
            const today = moment().tz('Europe/Istanbul').format('YYYY-MM-DD');
            startDateInput.setAttribute('min', today);

            startDateInput.addEventListener('change', function () {
                const startDate = startDateInput.value;
                // Set the minimum value for endDate to the selected startDate
                let minEndDate = moment(startDate).format('YYYY-MM-DD');
                endDateInput.setAttribute('min', minEndDate);
            });

            // Additional server-side validation (optional, but recommended)
            form.addEventListener('submit', function (e) {
                const startDate = new Date(startDateInput.value);
                const endDate = new Date(endDateInput.value);
                const now = new Date(moment().tz('Europe/Istanbul').format('YYYY-MM-DD')).setHours(0, 0, 0, 0);

                if (startDate < now) {
                    e.preventDefault(); // Prevent form submission
                    alert('Start Date must be today or a future date.');
                    return;
                }

                if (endDate < startDate) {
                    e.preventDefault(); // Prevent form submission
                    alert('End Date must be on or after the Start Date.');
                }
            });
        });
    </script>
</body>

</html>