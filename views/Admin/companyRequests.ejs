<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Company Requests</title>
	<script src="/admin_functions.js"></script>	
</head>

<body>
    <header>
        <%- include('../partials/nav') %>
        <div id="sidebar" class="sidebar">
            <button ><a href="/admin/announcementRequests" class="order"><i class="fa-solid fa-house"></i>Announcement Requests</a></button>
            <button style="background-color: rgb(217, 4, 4);"><a href="/admin/companyRequests" class="order">Company Requests</a></button>
            <button><a href="/admin/applicationRequests"  class="order">Application Requests</a></button>
        </div>
    </header>
    <div class="container mt-3">
		<div class="row">
			<div class="col-md-1 ">
			</div>
			<div class="col-md-9">
				<h1 class="h3 mb-3">Pending Company Registration Requests</h1>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Address</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% if (typeof companies !== 'undefined' && companies.length > 0) { %>
                    <% companies.forEach(company => { %>
                        <tr>
                            <td><%= company.name %></td>
                            <td><%= company.username %></td>
                            <td><%= company.email %></td>
                            <td><%= company.address %></td>
                            <td>
                                <button class="btn btn-success" onclick="updateCompanyRequest('<%= company.id %>', true)">Approve</button>
                                <button class="btn btn-danger" onclick="updateCompanyRequest('<%= company.id %>', false)">Reject</button>
                            </td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="5" class="text-center">No pending registration requests found.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
			</div>
		</div>   
    </div>

</body>

</html>