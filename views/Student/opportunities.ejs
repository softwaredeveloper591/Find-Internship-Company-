<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Internship Opportunities</title>
</head>
<body>
    <header>
        <%- include('../partials/nav') %>
        <div id="sidebar" class="sidebar">
            <a href="/student" class="order"><button ><i class="fa-solid fa-house"></i>Home</button></a>
            <a href="/student/opportunities" class="order"><button style="background-color: rgb(217, 4, 4);">Opportunities</button></a>
            <a href="/student/applications" class="order"><button >Applications</button></a>
        </div>
    </header>

    <div class="container mt-3">
        <div class="row">
            <div class="col-md-1">
            </div>
            <div class="col-md-9">
                <h1 class="h3 mb-3">Internship Opportunities</h1>
                <% if (typeof announcements !== 'undefined' && announcements.length > 0) { %>
                    <% announcements.forEach(announcement => { %>
                        <div class="card mb-3">
                            <div class="row">
                                <% if (announcement.image) { %>
                                    <div class="col-md-4">
                                        <img src="<%= announcement.image %>" class="img-fluid" alt="Announcement Image">
                                    </div>
                                <% } %>
                                <div class="<%= announcement.image ? 'col-md-8' : 'col-md-12' %>">
                                    <div class="card-body">
                                        <h3 class="card-title"><%= announcement.Company.name %></h3>
                                        <h5 class="card-title"><%= announcement.announcementName %></h5>
                                 
                                        <hr>
                                        <div class="row">
                                            <p class="card-text">End Time: <%= new Date(announcement.endDate).toLocaleString() %></p>
                                            <a href="/student/opportunities/:<%= announcement.id %>"
                                               class="btn btn-primary col-md-4">Apply</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p>You have either applied to all available opportunities or there are no active opportunities at this moment.</p>
                <% } %>
            </div>
        </div>
    </div>
</body>
</html>