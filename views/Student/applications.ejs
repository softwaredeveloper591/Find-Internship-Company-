<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Home Page</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
        integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/common.css">
    <link rel="stylesheet" href="/studentHome.css">
</head>
<body>
    <header>
        <%- include('../partials/nav') %>
        <div id="sidebar" class="sidebar">
            <a href="/student" class="order"><button ><i class="fa-solid fa-house"></i>Home</button></a>
            <a href="/student/opportunities" class="order"><button >Opportunities</button></a>
            <a href="/student/applications" class="order"><button style="background-color: rgb(217, 4, 4);">Applications</button></a>
        </div>
    </header>
    <div class="content-container">
        <div class="content">
        <% applications.forEach(application => { %>
            <div class="application">
                <h3>Application for <%= application.Announcement.announcementName %></h3>
                <!-- Steps Section -->
                <div class="steps">
                    <div id="pre-evaluation-<%= application.id %>" class="stage">
                        <img src="/interview.jpg" alt="Pre Evaluation">
                        <p>Ön Değerlendirme</p>
                        <span>(0)</span>
                    </div>
                    <div id="evaluation-<%= application.id %>" class="stage">
                        <img src="/evaluation.jpg" alt="Evaluation Stage">
                        <p>Değerlendirme Aşaması</p>
                        <span>(0)</span>
                    </div>
                    <div id="ssi-<%= application.id %>" class="stage">
                        <img src="/loading.jpg" alt="SSI Stage">
                        <p>SSK İşlemleri Aşaması</p>
                        <span>(0)</span>
                    </div>
                    <div id="internship-<%= application.id %>" class="stage">
                        <img src="/employee.jpg" alt="Internship Stage">
                        <p>Staj Aşaması</p>
                        <span>(0)</span>
                    </div>
					<div id="rejected-<%= application.id %>" class="stage">
                        <img src="/reject.png" alt="Rejected">
                        <p>Rejected</p>
                        <span>(0)</span>
                    </div>
                </div>
            </div>
        <% }) %>
        </div>
</div>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const applications = <%- JSON.stringify(applications) %>; // Convert applications data to a JavaScript object

            function setActiveStages(application) {
                const idSuffix = application.id; // Get the unique ID for each application

                // Check the status of the application and update the corresponding stage
                if (application.status === 0) {
                    document.getElementById(`pre-evaluation-${idSuffix}`).classList.add('active');
                    document.querySelector(`#pre-evaluation-${idSuffix} span`).textContent = `(1)`;
                } else if (application.status === 1) {
                    document.getElementById(`evaluation-${idSuffix}`).classList.add('active');
                    document.querySelector(`#evaluation-${idSuffix} span`).textContent = `(1)`;
                } else if (application.status === 2) {
                    document.getElementById(`ssi-${idSuffix}`).classList.add('active');
                    document.querySelector(`#ssi-${idSuffix} span`).textContent = `(1)`;
                } else if (application.status === 3) {
                    document.getElementById(`internship-${idSuffix}`).classList.add('active');
                    document.querySelector(`#internship-${idSuffix} span`).textContent = `(1)`;
                } else if (application.status === 4) {
                    document.getElementById(`rejected-${idSuffix}`).classList.add('active');
                    document.querySelector(`#rejected-${idSuffix} span`).textContent = `(1)`;
                }
            }
            applications.forEach(application => setActiveStages(application));
        });
    </script>
</body>
</html>