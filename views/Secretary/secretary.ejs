<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>change this!!!</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
        integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/secretary.css">
</head>

<body>
    <header>
        <%- include('../partials/nav') %>
        <div id="sidebar" class="sidebar">
            <a href="#" class="order"><button>Home</button></a>
            <a href="/admin" class="order"><button style="background-color: rgb(217, 4, 4);">Upload Employment Certificate</button></a>
        </div>
    </header>
    
    <div class="content-container-sec">
        <% applications.forEach(application => { %>
                <form action="#" method="POST" class="application-form">
                    <div class="content-sec">
                        <div class="request">
                            <div class="names">
								<label for="student">Student:</label>
                                <span id="student"><%= application.Student.username %></span>
                                <label for="application-id">Company:</label>
                                <span id="application-id"><%= application.Announcement.Company.name %></span>
                                <label for="company">Announcement:</label>
                                <span id="company"><%= application.Announcement.announcementName %></span>
                            </div>
                            <div class="files"> 
                                <div class="download-file">
									<button onclick="downloadButton('<%= application.id %>', 'Updated Application Form')" class="btn btn-primary">Download Application Form</button>
                                </div>
                                <div class="upload-file" id="custom-upload">
                                    Upload Employment Certificate<i class="fa-solid fa-upload"></i>
                                </div>
                                <input type="file" name="studentFile" id="studentFile" accept=".pdf,.txt,.docx" style="display: none;" required>
							</div>
                            <div class="submit-form">
                                <button type="button" class="submit-btn">Submit</button>
                            </div>
                        </div>
                    </div>
                </form> 
        <% }); %>
    </div>

    <script>

		async function downloadButton(applicationId, fileType) {
            try {
                const response = await fetch(`/secretary/applications/download/${applicationId}/${fileType}`);
                if (!response.ok) {
					const data = await response.json();
                    alert(data.error);
                }

                const blob = await response.blob();
                const contentDispositionHeader = response.headers.get('Content-Disposition');
                const filename = contentDispositionHeader.split('filename=')[1].replace(/"/g, '');
                const url = window.URL.createObjectURL(blob);

                const link = document.createElement('a');
                link.href = url;
                link.setAttribute('download', filename);
                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);
            } catch (error) {
                console.error('Error downloading file:', error);
            }
        };

        document.querySelectorAll('.upload-file').forEach((uploadDiv, index) => {
            uploadDiv.addEventListener('click', function() {
                document.querySelectorAll('#studentFile')[index].click();
            });
        });

        document.querySelectorAll('.submit-btn').forEach((submitBtn, index) => {
            submitBtn.addEventListener('click', function() {
                const fileInput = document.querySelectorAll('#studentFile')[index];
                if (fileInput.files.length === 0) {
                    alert("Please upload a file before submitting.");
                } else {
                    // Perform form submission
                    const applicationId = this.closest('.content-sec').querySelector('#application-id').textContent;
                    const fileName = fileInput.files[0].name;
                    alert(File '${fileName}' uploaded successfully for application ID: ${applicationId});
                    // Update application status
                    applications[index].application_secretary_sumbitted = true;
                    console.log(applications); // For demonstration purposes only
                    location.reload();
                }
            });
        });

        document.querySelectorAll('#studentFile').forEach((fileInput, index) => {
            fileInput.addEventListener('change', function() {
                const fileName = this.files[0].name;
                const customUploadDiv = document.querySelectorAll('.upload-file')[index];
                customUploadDiv.innerHTML = '<i class="fa-solid fa-file"></i> ' + fileName;
                customUploadDiv.style.border = '2px solid #43a047';
            });
        });
    </script>

</body>
</html>