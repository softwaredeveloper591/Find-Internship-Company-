        <button ><a href="/student/opportunities" class="order">Student Opportunities</a></button> 
        
    </div>


        <div class="container mt-3">
            <div class="row">
                <div class="col-md-9 offset-1">
                    <h1 class="h3 mb-3">Internship Opportunities</h1>


                    <% if (announcement.dataValues.active!=false) { %>
                        <div class="card mb-3">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="card-body">
                                        <h3 class="card-title">
                                            <%= announcement.companyId %>
                                        </h3>
                                        <h5 class="card-title">
                                            <%=announcement.dataValues.name%>
                                        </h5>

                                        <p class="card-text">
                                            <%= announcement.dataValues.description %>
                                        </p>
                                        <hr>
                                        <div class="row">
                                            <p class="card-text d-inline-block col-md-3 ">Start Date: <%=
                                                    announcement.dataValues.startDate %>
                                            </p>
                                            <p class="card-text d-inline-block col-md-4">End Date: <%=
                                                    announcement.dataValues.endDate %>
                                            </p>
                                            <br>
                                            <div class="row" id="buttonContainer<%=announcement.dataValues.id%>">
                                                <form action="" method="post" enctype="multipart/form-data">
                                                    <label for="CV" class="col-sm-1 col-form-label">CV :</label>
                                                    <div class="col-sm-4">
                                                        <input type="file" class="form-control" id="CV" name="CV">
                                                    </div>
                                                    <input type="hidden" name="studentID" value=" <%= dataValues.id %>">
                                                    <input type="hidden" name="username" value=" <%= dataValues.username%>">
                                                    <div class="row mb-3">
                                                        <div class="col-sm-8">
                                                            <button type="submit"
                                                                class="btn btn-primary mt-3">GÃ¶nder</button>
                                                        </div>
                                                    </div>
                                                </form>
                                                


                                            </div>
                
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% } %>
                </div>
            </div>
        </div>


