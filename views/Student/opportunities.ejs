<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>

</head>
<%- include('../partials/nav') %>
<body>
   
    
    <div id="sidebar" class="sidebar">
        <!-- <button><a href="/company" class="order"><i class="fa-solid fa-house"></i>Home</a></button> -->
        <button style="background-color: red;"><a href="/student/opportunities" class="order">Student Opportunities</a></button> <!-- Add link to refer share opport page page link -->
        <!-- <button><a href="" class="order">My Applications</a></button> -->
         <!-- <button><a href="" class="order">Internship </a></button> -->
    </div>
    
        <div class="container mt-3">
            <div class="row">
                <div class="col-md-9 offset-1">
                    <h1 class="h3 mb-3">Internship Opportunities</h1>
                    
                    <% announcements.forEach(announcement => { %>
                        <% if (announcement.dataValues.active!=false) { %>
                            <div class="card mb-3">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="card-body">
                                            <h3 class="card-title">
                                                <%= announcement.companyId %>
                                            </h3>
                                            <h5 class="card-title">
                                                <%=announcement.dataValues.name%>
                                            </h5>
        
                                            <p class="card-text"> <%= announcement.dataValues.description %></p>
                                            <hr >
                                            <div class="row">
                                                <p class="card-text d-inline-block col-md-3 ">Start Date: <%= announcement.dataValues.startDate %></p>
                                                <p class="card-text d-inline-block col-md-4">End Date: <%= announcement.dataValues.endDate %></p>
                                                <br>
                                                <div class="row" id="buttonContainer<%=announcement.dataValues.id%>">
                                                <a href="/student/opportunities/:<%=announcement.dataValues.id%>" class="btn btn-primary col-md-2">Ba≈üvur</a>
                                                    
                                                </div>
                                                <div id="result<%=announcement.dataValues.id%>" class="alert" style="display:none; "></div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% } %>
                    <% }) %>
                </div>
            </div>
        </div>


</body>


</html>