    crossorigin="anonymous" referrerpolicy="no-referrer" />
<header>
    <div>
        <div class="dp-menu">
            <button style="background-color: darkred; border: none;" onclick="toggleSidebar()">
                <i class="fa-solid fa-bars p-2"></i>
            </button>
        </div>
        <script type="text/javascript">
            function toggleSidebar() {
                var sidebar = document.getElementById('sidebar');
                if (sidebar.style.width == '0px') {
                    sidebar.style.width = '180px'; 
                } else {
                    sidebar.style.width = '0px'; 
                }
            }
        </script>
    </div>
    <div class="logo">
        <img src="/Ä°yte Logo.png" class="top-left-logo"> 
    </div>
    <div class="navbar justify-content-end">
        <div class="navbar-content">
            <div class="nav-2">
                <form class="search-form">
                    <input type="text" placeholder="Search..." class="search-input">
                    <button type="submit" class="search-button"><i class="fa-solid fa-magnifying-glass p-1"></i></button>
                </form>
            </div>
            <div class="dropdown-center me-5">

                <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <%= dataValues.username %>
                </button>
                <ul class="dropdown-menu ">
                    <li class="dropdown-item disabled">
                        <%= usertype %>
                    </li>
                    <hr>
                    <li><a class="dropdown-item" href="/logout">Log Out</a></li>
                </ul>
            </div>

        </div>
    </div>
</header>





