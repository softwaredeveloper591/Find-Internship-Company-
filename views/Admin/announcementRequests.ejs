<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Announcement Requests</title>
    <script src="/admin_functions.js"></script>
</head>

<body>
    <header>
        <%- include('../partials/nav') %>
        <div id="sidebar" class="sidebar">
            <a href="/admin/announcementRequests" class="order"><button style="background-color: rgb(217, 4, 4);"><i class="fa-solid fa-house"></i>Announcement Requests</button></a>
            <a href="/admin/companyRequests" class="order"><button >Company Requests</button></a>
            <a href="/admin/applicationRequests"  class="order"><button>Application Requests</button></a>
        </div>
    </header>
    <div class="container mt-1">
        <div class="row">
            <div class="col-md-1">
            </div>
            <div class="col-md-9">
                <h1 class="h3 mb-3">Pending Announcement Requests</h1>
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Company Name</th>
                            <th>Announcement Name</th>
                            <th>Description</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (typeof announcements !== 'undefined' && announcements.length > 0) { %>
                            <% announcements.forEach(announcement => { %>
                                <tr>
                                    <td><%= announcement.Company.name %></td>
                                    <td><%= announcement.announcementName %></td>
                                    <td><%= announcement.description %></td>
                                    <td><%= new Date(announcement.startDate).toLocaleString() %></td>
                                    <td><%= new Date(announcement.endDate).toLocaleString() %></td>
                                    <td>
                                        <button class="btn btn-success" onclick="updateAnnouncement('<%= announcement.id %>', true)">Approve</button>
                                        <button class="btn btn-danger" onclick="updateAnnouncement('<%= announcement.id %>', false)">Reject</button>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="6" class="text-center">No pending announcements found.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>

</html>